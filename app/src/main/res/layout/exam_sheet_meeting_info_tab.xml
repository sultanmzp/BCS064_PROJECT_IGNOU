<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoiningPanel.MeetingInfoForTabs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="15dp"
            >
            <!-- this is comment in xml -->
            <TextView
                android:id="@+id/midShower1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textStyle="bold"
                android:text="1DYxc456Xd"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_marginBottom="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Joining Info."
                android:textSize="20sp"
                />
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                />
            <TextView
                android:id="@+id/linkofmeeting"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="www.zo.in/id:1DYxc456Xd?!!pass=mnFGd13"
                />
            <TextView
                android:id="@+id/midShower2"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Exam ID: 1DYxc456Xd"
                />
            <TextView
                android:id="@+id/midShowerPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Passcode: mnFGd13"
                />
            <TextView
                android:id="@+id/studentshareoptionWhenExamStart"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="   Share"
                android:drawableLeft="@drawable/sharesmallnavy"
                />
        </LinearLayout>
    </ScrollView>
</FrameLayout>