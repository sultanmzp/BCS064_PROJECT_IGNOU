<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/celebrityImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/qspaper"
        android:layout_marginRight="15dp"
        />
    <LinearLayout
        android:id="@+id/llc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/celebrityImage"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject Code"
            android:id="@+id/celebrityTitle"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Name"
            android:id="@+id/celebrityDescription"
            android:textStyle="bold"
            android:textSize="14sp"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/celebrityImage"
        android:layout_marginTop="10dp"
        android:background="#cccccc"
        />


</RelativeLayout>