<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_gradient_background"
    tools:context=".Activities.JoinExam.QuestionSheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/classname_tv_show_qs123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Class Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/subjectname_tv_show_qs123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject Name"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/subjectcode_tv_show_qs11123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject Code"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/fullMarks_tv_show_qs123"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Marks :"
            android:textSize="18sp"
            android:gravity="left"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            />

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearlayoutOfTabLayoutQuestionShow"
            android:layout_margin="5dp"
            >
            <TextView
                android:id="@+id/studentNameOfQuestionShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Student Name:"
                android:textSize="18sp"
                android:gravity="left"
                android:textStyle="italic"
                android:drawableLeft="@drawable/createsmallnavy"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/studentRollOfQuestionShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Student Roll No. :"
                android:textSize="18sp"
                android:gravity="left"
                android:textStyle="italic"
                android:drawableLeft="@drawable/questionsmallnavy"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/studentEmailOfQuestionShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Subject Code"
                android:textSize="18sp"
                android:gravity="left"
                android:textStyle="italic"
                android:drawableLeft="@drawable/emailsmallnavy"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/studentIdOfQuestionShow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:drawableLeft="@drawable/cardsmallnavy"
                android:text="   ID No. :"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                />

            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>

    </ScrollView>


</LinearLayout>

